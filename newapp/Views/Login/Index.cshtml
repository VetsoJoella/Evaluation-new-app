@model Manager
@{
    ViewData["Title"] = "Connexion";
}
@if (ViewData["Error"] != null)
{
    <div class="alert alert-danger">
        @ViewData["Error"]
    </div>
}
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<div class="container">

    <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
    <div class="container">
        <div class="row justify-content-center">
        <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">

            <div class="d-flex justify-content-center py-4">
            <a href="index.html" class="logo d-flex align-items-center w-auto">
                <img src="http://localhost/CDN-NIceAdmin/img/logo.png" alt="">
                <span class="d-none d-lg-block">New App</span>
            </a>
            </div><!-- End Logo -->

            <div class="card mb-3">

            <div class="card-body">

                <div class="pt-4 pb-2">
                <h5 class="card-title text-center pb-0 fs-4">Connection</h5>
                <!-- <p class="text-center small">Enter your username & password to login</p> -->
            </div>

            <!-- Formulaire de connexion -->
            <form asp-action="Connection"  method="post" class="row g-3 needs-validation" novalidate>
                
                <!-- Champ Nom -->
                <div class="col-12">
                    <label for="yourUsername" class="form-label">Username</label>
                    <div class="input-group has-validation">
                        <input type="text" asp-for="Name"  class="form-control" id="yourUsername" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <!-- Champ Mot de passe -->
                <div class="col-12">
                    <label for="yourPassword" class="form-label">Password</label>
                    <input type="password" asp-for="Password"  class="form-control" id="yourPassword" required />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <!-- Bouton de soumission -->
                <div class="col-12">
                    <button class="btn btn-primary w-100" type="submit">Login</button>
                </div>
            </form>

            </div>
            </div>

            <div class="credits">
            <!-- All the links in the footer should remain intact. -->
            <!-- You can delete the links only if you purchased the pro version. -->
            <!-- Licensing information: https://bootstrapmade.com/license/ -->
            <!-- Purchase the pro version with working PHP/AJAX contact form: https://bootstrapmade.com/nice-admin-bootstrap-admin-html-template/ -->
            Designed by <a href="https://bootstrapmade.com/">BootstrapMade</a>
            </div>

        </div>
        </div>
    </div>

    </section>

</div>
